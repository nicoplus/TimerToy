<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customize="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.geekband.timertoy.MainActivity"
    android:background="@color/colorPrimary">

    <com.cc.geekband.timertoy.ColockView
        android:id="@+id/colockView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/paly"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/reset"
        android:layout_alignBottom="@+id/paly"
        android:layout_alignStart="@+id/colockView" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/colockView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/listView" />




</RelativeLayout>
